<%= stylesheet_link_tag "profile", "data-turbo-track": "reload" %>
<div class="layout">
  <div class="p-4 md-5 mb-4 bg-body-tertiary">
    <h1>New Post</h1>
    <%= form_with model: [@user, @post], url: user_posts_path(@user), class: "new-post-form" do |form| %>
      <div class="form-label-group mb-3">
        <%= form.label :title, placeholder: "title", class: "form-control" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-label-group mb-3">
        <%= form.label :body, placeholder: "body", class: "form-control" %>
        <%= form.text_area :body, class: "form-control" %>
      </div>
      <div class="d-grid"">
        <%= form.submit "Post",  class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>