<%= stylesheet_link_tag "profile", "data-turbo-track": "reload" %>

<div class="layout">
  <div class="p-4 md-5 mb-4 bg-body-tertiary">
    <h1>Edit Password</h1>

    <%= form_with model: Current.user, url: edit_password_path do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.submit "Edit Password",  class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>