<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">friends</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="list-group">
        <% if !@user.friends.empty? %>
          <% @user.friends.each do |friend| %>
            <li class="list-group-item"><%= link_to friend.username, profile_user_path(friend), class:"link-light"%></li>
          <% end %>
        <% else %>
          <li class="list-group-item text-center p-4"><h4>No friends yet.</h4> <br><p>Send users a friend request to connect.</p></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>